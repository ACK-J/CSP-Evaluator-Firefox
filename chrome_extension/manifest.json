{
  "manifest_version": 3,
  "name": "CSP Checker",
  "version": "1.0",
  "description": "Displays the content security policy of the current site.",
  "permissions": [
    "webRequest",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
